{{!
    @template mod_externalassignment/view_summary

    view the external assignment as a student

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * externallink, timeremaining, modified, totalgrade, totalgrademax, totalpercentage,
      externalgrade, externalgrademax, externalpercentage, manualgrade, manualgrademax, manualpercentage,
      hasmanualgrade, externalfeedback, manualfeedback

    Example context (json):
    {
    }
}}
<div class="submissionstatustable">
  <h3>{{#str}}submissionstatus, externalassignment{{/str}}</h3>
  <div class="box py-3 boxaligncenter submissionsummarytable">
    <div class="table-responsive">
      <table class="generaltable table-bordered">
        <tbody>
        <tr class="">
          <th class="cell c0" style="" scope="row">{{#str}}studentlink, externalassignment{{/str}}</th>
          <td class="cell c1 lastcol" style="">{{externallink}}</td>
        </tr>
        <tr class="">
          <th class="cell c0" style="" scope="row">{{#str}}timeremaining, externalassignment{{/str}}</th>
          <td class="cell c1 lastcol" style="">{{timeremaining}}</td>
        </tr>
        <tr class="lastrow">
          <th class="cell c0" style="" scope="row">Last modified</th>
          <td class="cell c1 lastcol" style="">{{modified}}</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="feedback">
  <h3>{{#str}}feedback, externalassignment{{/str}}</h3>
  <h4>{{#str}}grading, externalassignment{{/str}}</h4>
  <table class="generaltable table-bordered">
    <thead>
    <tr>
      <th>{{#str}}gradecomponent, externalassignment{{/str}}</th>
      <th class="text-right">{{#str}}percentage, externalassignment{{/str}}</th>
      <th class="text-right">{{#str}}scorereached, externalassignment{{/str}}</th>
      <th class="text-right">{{#str}}scoremaximum, externalassignment{{/str}}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td class="cell c0">{{#str}}externalgrading, externalassignment{{/str}}</td>
      <td class="cell c1 text-right">{{externalpercentage}}%</td>
      <td class="cell c2 text-right">{{externalgrade}}</td>
      <td class="cell c3 text-right lastcol">{{externalgrademax}}</td>
    </tr>
    {{#hasmanualgrade}}
    <tr>
      <td class="cell c0">{{#str}}manualgrading, externalassignment{{/str}}</td>
      <td class="cell c1 text-right">{{manualpercentage}}%</td>
      <td class="cell c2 text-right" style="">{{manualgrade}}</td>
      <td class="cell c3 text-right lastcol" style="">{{manualgrademax}}</td>
    </tr>
    <tr>
      <td class="cell c0 font-weight-bold">{{#str}}totalgrade, externalassignment{{/str}}</td>
      <td class="cell c1 text-right font-weight-bold">{{totalpercentage}}%</td>
      <td class="cell c2 text-right font-weight-bold">{{totalgrade}}</td>
      <td class="cell c3 text-right font-weight-bold lastcol">{{totalgrademax}}</td>
    </tr>
    {{/hasmanualgrade}}
    <tr>
      <td class="cell c0">{{#str}}passinggrade, externalassignment{{/str}}</td>
      <td class="cell c1 text-right">{{passingpercentage}}%</td>
      <td class="cell c2 text-right">{{passinggrade}}</td>
      <td class="cell c3 text-right lastcol"></td>
    </tr>
    </tbody>
  </table>
  <h4>{{#str}}externalfeedback, externalassignment{{/str}}</h4>
  <div class="box py-3 boxaligncenter">
    {{{externalfeedback}}}
  </div>
  <h4>{{#str}}manualfeedback, externalassignment{{/str}}</h4>
  <div class="box py-3 boxaligncenter">
    {{{manualfeedback}}}
  </div>
</div>